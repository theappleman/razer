# Path to the PID-file
PIDFILE="/var/run/razerd/razerd.pid"

start() {
	ebegin "Starting razerd"
	start-stop-daemon --start --quiet --background \
		--pidfile ${PIDFILE} \
		--exec /usr/sbin/razerd -- -P ${PIDFILE}
	eend $?
}

stop() {
	ebegin "Stopping razerd"
	start-stop-daemon --stop --quiet \
		--pidfile ${PIDFILE}
	eend $?
}
